////////////////////////////////////////////////////////////////////////
// Check for and install Stata packages
////////////////////////////////////////////////////////////////////////

capture which freduse
if _rc == 111 {                 
	dis "Installing freduse"
    quietly ssc install freduse, replace
}

capture which binscatter
if _rc == 111 {                 
	dis "Installing binscatter"
    quietly ssc install binscatter, replace
}

