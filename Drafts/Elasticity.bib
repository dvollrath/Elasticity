	issn = {1094-2025},
	journal = {Review of Economic Dynamics},
	keywords = {Business cycles, Total factor productivity, Intangible investments, Input-output linkages},
	note = {The twenty-fifth anniversary of ``Frontiers of Business Cycle Research"},
	pages = {S147-S166},
	title = {Intangible capital and measured productivity},
	url = {https://www.sciencedirect.com/science/article/pii/S1094202520300466},
	volume = {37},
	year = {2020},
	bdsk-url-1 = {https://www.sciencedirect.com/science/article/pii/S1094202520300466},
